<!DOCTYPE html><html lang="pt-br"><head>
<meta charset="UTF-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>Breakout Retro</title>
<style>
body{margin:0;background:#060615;color:#fff;font-family:Arial;display:grid;place-items:center;height:100vh}
canvas{border:2px solid #ffcc00;border-radius:10px;background:rgba(0,0,0,.35)}
</style></head><body>
<canvas id="c" width="760" height="420"></canvas>
<script>
const c=document.getElementById('c'),x=c.getContext('2d');
let px=340, pw=120, bx=380, by=200, bvx=4, bvy=-4, score=0;
let blocks=[]; const rows=4, cols=10, bw=70, bh=18, pad=6, top=40, left=20;
for(let r=0;r<rows;r++)for(let col=0;col<cols;col++)blocks.push({x:left+col*(bw+pad),y:top+r*(bh+pad),w:bw,h:bh,hit:false});
addEventListener('mousemove',e=>{ const rect=c.getBoundingClientRect(); px=(e.clientX-rect.left)-(pw/2); px=Math.max(0,Math.min(c.width-pw,px));});
function loop(){
  requestAnimationFrame(loop);
  x.clearRect(0,0,c.width,c.height);
  x.fillStyle='rgba(0,0,0,.25)'; x.fillRect(0,0,c.width,c.height);

  // paddle
  x.fillStyle='#00d4ff'; x.fillRect(px,c.height-26,pw,14);

  // ball
  bx+=bvx; by+=bvy;
  if(bx<10||bx>c.width-10) bvx*=-1;
  if(by<10) bvy*=-1;

  // paddle collision
  if(by>c.height-40 && bx>px && bx<px+pw){ bvy=-Math.abs(bvy); }

  // blocks
  x.fillStyle='#ff007a';
  for(const b of blocks){
    if(b.hit) continue;
    x.fillRect(b.x,b.y,b.w,b.h);
    if(bx>b.x && bx<b.x+b.w && by>b.y && by<b.y+b.h){
      b.hit=true; bvy*=-1; score+=10;
    }
  }

  // ball draw
  x.fillStyle='#ffcc00'; x.beginPath(); x.arc(bx,by,8,0,Math.PI*2); x.fill();
  x.fillStyle='rgba(255,255,255,.75)'; x.fillText('Score: '+score, 14, 18);

  if(by>c.height+30){
    alert('Game Over! Score: '+score);
    bx=380; by=200; bvx=4; bvy=-4; score=0;
    blocks.forEach(b=>b.hit=false);
  }
}
loop();
</script></body></html>
