<body>

    <div class="score-box">Zycoins: <span id="balance">0.00</span></div>
    <div id="status-text">O SEU LUNGA TÁ ZANGADO!</div>

    <img src="lunga.png" id="lunga-img" onclick="agradarLunga()">

    <p class="hint">Clique para fazer o homem sorrir e minerar!</p>

    <script>
        let clicks = 0;
        let balance = 0;
        const img = document.getElementById('lunga-img');
        const statusText = document.getElementById('status-text');
        const balanceDisplay = document.getElementById('balance');

        function agradarLunga() {
            clicks++;
            
            if (clicks < 15) {
                statusText.innerText = "NÃO ME RELE!";
                img.style.filter = "grayscale(100%) brightness(0.7)";
            } else if (clicks < 40) {
                statusText.innerText = "TÁ OLHANDO O QUÊ?";
                img.style.filter = "grayscale(50%)";
            } else {
                // O SORRISO (Aqui a mineração ativa)
                statusText.innerText = "SORRIU! GANHANDO ZYCOINS!";
                statusText.style.color = "#00ff00";
                img.style.filter = "grayscale(0%)";
                img.style.borderColor = "#00ff00";
                
                balance += 2.50; // Paga mais porque é mais difícil
                balanceDisplay.innerText = balance.toFixed(2);
            }
        }
    </script>
</body>
</html>
